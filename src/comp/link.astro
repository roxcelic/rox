---
const { title, url, dates,writedate, tags, auth, desc } = Astro.props;
---
<div class="blogc">
    <p>
        <a href={url}>- {title} -</a><br>
        - {desc} -<br>
        - written by: {auth}  - written on: {writedate}-<br>
        - updated on: {dates}-<br>
        - {
            tags && 
            <span>
                {tags.join(", ")}
            </span>
        } -
    </p>
    <div style="width: 100%; height: 3px; background-color: white;margin: 0;"/>
</div>